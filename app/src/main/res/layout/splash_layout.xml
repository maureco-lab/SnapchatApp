<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#96CADC"
    tools:context=".SplashActivity">


    <ImageView
        android:id="@+id/ImgLogoSplash"
        android:layout_centerInParent="true"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@drawable/amongois"
        />

    <TextView
        android:id="@+id/txtSnap"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="SnapChat"
        android:layout_marginTop="15dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/ImgLogoSplash"
        android:fontFamily="@font/caprasimoregular"
        android:textSize="30dp"
        android:textColor="#FDFA00"
        />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="150dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/txtSnap"
        android:indeterminate="true"
        />


</RelativeLayout>